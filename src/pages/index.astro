---
import BaseLayout from "../layouts/BaseLayout.astro";

import HeroSection from "../components/home/HeroSection.astro";
import VideoSlider from "../components/home/VideoSlider";
import ProgramsSection from "../components/home/ProgramsSection.astro";
import ArticlesSection from "../components/home/ArticlesSection.astro";

import type { Banner, Campaign, Article } from '../types';

const API_URL = "https://sys.yathim.or.id/api";
const STORAGE_URL = "https://sys.yathim.or.id/storage";
const SITE = "https://yathim.or.id";

let banners: Banner[] = [];
let homeBanner: Banner | null = null;
let videoSlides: Banner['video_slides'] = [];
let featuredCampaigns: Campaign[] = [];
let featuredArticles: Article[] = [];

try {
  const bannersResponse = await fetch(`${API_URL}/page-banner`);
  if (bannersResponse.ok) {
    const bannersData = await bannersResponse.json();
    banners = bannersData.data?.data || bannersData.data || [];
    homeBanner = banners.find((banner) => banner.id === 1 || banner.page_identifier === "home") || null;
    if (homeBanner && homeBanner.video_slides) {
      videoSlides = homeBanner.video_slides;
    }
  }
} catch (error) {
  console.error("Error fetching banners:", error);
}

try {
  const campaignsResponse = await fetch(`${API_URL}/campaign?featured=hot`);
  if (campaignsResponse.ok) {
    const campaignsData = await campaignsResponse.json();
    featuredCampaigns = campaignsData.data?.data || campaignsData.data || [];
  }
} catch (error) {
  console.error("Error fetching featured campaigns:", error);
}

try {
  const articlesResponse = await fetch(`${API_URL}/article?featured=hot`);
  if (articlesResponse.ok) {
    const articlesData = await articlesResponse.json();
    featuredArticles = articlesData.data?.data || articlesData.data || [];
  }
} catch (error) {
  console.error("Error fetching featured articles:", error);
}
---

<BaseLayout
  title="Yayasan Taman Harapan Insan Mulia - Donasi untuk Yatim dan Dhuafa"
  description="Yayasan Taman Harapan Insan Mulia adalah lembaga sosial yang bergerak dalam bidang pendidikan, kesehatan, dan pemberdayaan masyarakat untuk yatim dan dhuafa."
  image="/images/image-yathim.jpeg"
  keywords="yayasan, donasi, yatim, dhuafa, sosial, pendidikan, kesehatan, pemberdayaan, amal, bantuan, zakat, infaq, sedekah"
  type="website"
>
  <HeroSection homeBanner={homeBanner} />

  {videoSlides.length > 0 && (
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Dokumentasi Kegiatan</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Saksikan berbagai kegiatan dan program yang telah kami laksanakan untuk membantu yatim dan dhuafa
          </p>
        </div>
        <VideoSlider slides={videoSlides} client:visible />
      </div>
    </section>
  )}

  <ProgramsSection 
    campaigns={featuredCampaigns} 
    siteUrl={SITE} 
    storageUrl={STORAGE_URL} 
  />

  <ArticlesSection 
    articles={featuredArticles} 
    siteUrl={SITE} 
    storageUrl={STORAGE_URL} 
  />
</BaseLayout>