---
import Layout from "./Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: string;
  canonical?: string;
  keywords?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
  noindex?: boolean;
  nofollow?: boolean;
}

const props = Astro.props;
---

<Layout {...props}>
  <Navbar />
  <main>
    <slot />
  </main>
  <Footer />
</Layout>
